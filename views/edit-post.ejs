<link rel="stylesheet" href="../public//styles/styles.css">
<body>
    <div class="w-full h-screen bg-slate-400 p-10">
        <div class="flex justify-between items-center">

            <h3 class="text-3xl text-zinc-800 ">Edit Post</h3>
            <a class ="text-sm w-20 text-center text-white bg-red-500 px-2 py-2 rounded-md" href="/logout">logout</a>
        </div>
        <h5 class=" text-zinc-600 mb-5 ">You can edit your post here...</h5>

        <form action="/edit-post/<%=currentpost._id%>" method="post" >
            <textarea placeholder="" name="editedContent"  class="px-3 w-1/3 py-2 resize-none rounded-md outline-none border-2 border-zinc-800" id=""><%=currentpost.content%></textarea>
            <input type="submit" value="Edit" class="w-1/10 block px-2 py-2 mt-2 rounded-md outline-none border-2 border-yellow-800 bg-yellow-500 text-white font-bold text-sm">
        </form>

       
      
    </div>
    <script src="../public//scripts/script.js"></script>
